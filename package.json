{
  "name": "rbm-viz",
  "version": "0.2.0",
  "description": "web-based data visualization for risk-based monitoring",
  "module": "src/main.js",
  "main": "index.js",
  "scripts": {
    "build": "npm run bundle && npm run format",
    "bundle": "esbuild src/main.js --bundle --global-name=rbmViz --minify --outfile=index.js --sourcemap",
    "format": "npm run format-src && npm run format-examples",
    "format-src": "npx prettier --single-quote --tab-width=4 --write src",
    "format-examples": "npx prettier --single-quote --tab-width=4 --write examples",
    "local": "live-server --ignore=**/node_modules --wait=250 .",
    "watch": "esbuild src/main.js --bundle --global-name=rbmViz --minify --outfile=index.js --sourcemap --watch",
    "test": "npx mocha-esbuild \"test/*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gilead-BioStats/rbm-viz.git"
  },
  "keywords": [
    "rbm",
    "risk-based",
    "monitoring",
    "data",
    "visualization"
  ],
  "author": "Gilead Sciences",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gilead-BioStats/rbm-viz/issues"
  },
  "homepage": "https://github.com/Gilead-BioStats/rbm-viz#readme",
  "dependencies": {
    "chart.js": "^3.9.1",
    "chartjs-plugin-annotation": "^2.0.1",
    "chartjs-plugin-datalabels": "^2.1.0",
    "d3": "^7.6.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rtvision/mocha-esbuild": "^0.1.8",
    "chai": "^4.3.6",
    "csvtojson": "^2.0.10",
    "esbuild": "^0.15.7",
    "jsdoc": "^3.6.11",
    "live-server": "^1.2.2",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1"
  }
}
